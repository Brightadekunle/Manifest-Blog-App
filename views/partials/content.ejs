<!--POST VIEW STARTS HERE -->
<% if (title == 'Create Post') { %>
    <div class="col-sm-8">    
        <div class="jumbotron">
            <form action="/blog/post/create" method="post">
              Post Title:<br>
              <input type="text" name="post_title" value="" class="form-control">
              <br>
              Post Body:<br>
              <input type="text" name="post_body" value="" class="form-control">
              <br><br>
              <input class="btn btn-primary" type="submit" value="Submit">
            </form>
        </div>
    </div>
<% } else if (title == 'Delete Post') { %>
     
<% } else if (title == 'Update Post') { %>
    <div class="col-sm-8">    
        <div class="jumbotron">
            <form action="/blog/post/<%= post.id %>/update" method="post">
              Post Title:<br>
              <input type="text" name="post_title" value="<%= post.post_title %>" class="form-control">
              <br>
              Post Body:<br>
              <input type="text" name="post_body" value="<%= post.post_body %>" class="form-control">
              <br><br>
              <input type="submit" value="Update" class="btn btn-primary">
            </form>
        </div>
    </div>
<% } else if (title == 'Post Details') { %>
    <div class="col-sm-8">    
        <div class="">
             <h1>Details of a Single post</h1>
             <p>I am a post for this ID = <%= post.id %></p>
             <p>Post Title: <%= post.post_title %></p>
             <p>Post Body:  <%= post.post_body %></p>
             <a class="btn btn-primary" href="/blog/post/<%= post.id %>/update">Edit  Post</a> | <a class="btn btn-danger" href="/blog/post/<%= post.id %>/delete">Delete Post</a>
        </div>
    </div>
<% } else if (title == 'Post List') { %>
    <div class="col-sm-8">    
        <div class="">
        <ol>
        <% posts.forEach(function(post) { %>
                <li>
                    <h4><a href="/blog/post/<%= post.id %>"><%= post.post_title %></a></h4>
                    <p>The main body of the post <%= post.post_body %></p>
                     <a class="btn btn-primary" href="/blog/post/<%= post.id %>/update">Edit  Post</a> | <a class="btn btn-danger" href="/blog/post/<%= post.id %>/delete">Delete Post</a>
                </li>
            <br/>
        <% }); %>
        </ol>
    </div>
    </div>
<% } else { %>
    <div class="col-sm-8">    
        <div class="jumbotron">
            <h1 class"title"><%= title %></h1>
            <!--<p>The main content of the page goes here</p>-->
        </div>
    </div>
<% } %>
<!--POST VIEW END HERE-->

